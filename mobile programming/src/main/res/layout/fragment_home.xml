<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/vp">

        </androidx.viewpager.widget.ViewPager>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="5">

            <Button android:text="1인분" />

            <Button android:text="테이크아웃" />

            <Button android:text="배민라이더스" />

            <Button android:text="한식"
                android:id="@+id/btn_food1"/>

            <Button android:text="분식"
                android:id="@+id/btn_food2"/>

            <Button android:text="돈까스/일식"
                android:id="@+id/btn_food3"/>

            <Button android:text="카페/디저트" />

            <Button android:text="치킨" />

            <Button android:text="피자" />

            <Button android:text="아시안/양식" />

            <Button android:text="중국집" />

            <Button android:text="족발/보쌈" />

            <Button android:text="야식" />

            <Button android:text="찜/탕" />

            <Button android:text="도시락" />

            <Button android:text="패스트푸드" />

            <Button android:text="프랜차이즈" />

            <Button android:text="맛집랭킹" />

        </GridLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="검색"
            android:textSize="9pt"
            android:background="@drawable/xml_border"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="공지"
            android:textSize="8pt"
            android:background="@drawable/xml_border"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이벤트"
            android:textSize="8pt"
            android:background="@drawable/xml_border"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="발표"
            android:textSize="8pt"
            android:background="@drawable/xml_border"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>